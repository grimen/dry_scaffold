%h1.heading
  = 'New <%= singular_name.humanize %>'
  
<% if options[:formtastic] -%>
- semantic_form_for(<%= resource_instance %>) do |form|
  = render 'form', :form => form
  - form.buttons do
    = form.commit_button 'Create'
<% else -%>
- form_for(<%= resource_instance %>) do |form|
  = form.error_messages
  = render 'form', :form => form
  %p.buttons
    = form.submit 'Create'
<% end -%>
    
%p.actions
  = link_to 'Cancel', <%= index_path %>